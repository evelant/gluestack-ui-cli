{
  "name": "create-next-app-with-gluestack-ui",
  "keywords": [
    "react",
    "react-native",
    "expo",
    "storybook",
    "nextjs",
    "cross-platform",
    "cli"
  ],
  "description": "A CLI tool for easily adding components from gluestack-ui to your projects.",
  "version": "0.1.15",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsc --watch",
    "watch": "tsc --watch",
    "build": "tsc",
    "prepare": "tsc",
    "test:production": "jest --isProduction=true",
    "test": "jest",
    "dev": "node dist/index.js",
    "release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "bin": {
    "create-next-app-with-gluestack-ui": "dist/index.js"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "mayank-96",
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@clack/prompts": "^0.6.3",
    "@gluestack/cli-utils": "^0.1.1",
    "@types/minimist": "^1.2.2",
    "find-package-json": "^1.2.0",
    "fs-extra": "^11.1.1",
    "simple-git": "^3.16.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/find-package-json": "^1.2.3",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.16",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^15.0.0",
    "size-limit": "^8.2.4",
    "supertest": "^6.3.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "util": "^0.12.5"
  }
}
